<div>
  <div>
    <h1>
      List of all drinks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new drink
    </h2>

    <form action="/insert_drink" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="party_id_box">
          Party
        </label>

        <input type="text" id="party_id_box" name="query_party_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create drink
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Party
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_drinks.each do |a_drink| %>
      <tr>
        <td>
          <%= a_drink.id %>
        </td>

        <td>
          <%= a_drink.name %>
        </td>

        <td>
          <%= a_drink.party_id %>
        </td>

        <td>
          <%= a_drink.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_drink.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_drink.updated_at) %> ago
        </td>

        <td>
          <a href="/drinks/<%= a_drink.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
