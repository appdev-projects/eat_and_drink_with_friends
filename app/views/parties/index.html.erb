<div>
  <div>
    <h1>
      List of all parties
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new party
    </h2>

    <form action="/insert_party" method="post">
      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <div>
        <label for="time_box">
          Time
        </label>

        <input type="time" id="time_box" name="query_time">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <button>
        Create party
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Time
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_parties.each do |a_party| %>
      <tr>
        <td>
          <%= a_party.id %>
        </td>

        <td>
          <%= a_party.date %>
        </td>

        <td>
          <%= a_party.time %>
        </td>

        <td>
          <%= a_party.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_party.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_party.updated_at) %> ago
        </td>

        <td>
          <a href="/parties/<%= a_party.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
