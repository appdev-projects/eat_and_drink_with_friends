<div>
  <div>
    <h1>
      List of all parties
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new party
    </h2>

    <form action="/insert_party" method="post">
      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <div>
        <label for="time_box">
          Time
        </label>

        <input type="time" id="time_box" name="query_time">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="party_host">
          Party host
        </label>

        <input type="hidden" id="party_host" name="party_host" value="#{@current_user.id}">
      </div>

      <div>
        <label for="address">
          Address
        </label>

        <input type="text" id="address" name="address">
      </div>

      <button>
        Create party
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Time
        </th>

        <th>
          Description
        </th>

        <th>
          Host
        </th>
        
        <th>
        Address
      </th>

        
      </tr>

      <% @list_of_parties.each do |a_party| %>
      <tr>
        <td>
          <%= a_party.id %>
        </td>

        <td>
          <%= a_party.date %>
        </td>

        <td>
          <%= a_party.time %>
        </td>

        <td>
          <%= a_party.description %>
        </td>

        <td>
        <%= a_party.user.first_name %>
      </td>

      <td>
      <%= a_party.address %>
    </td>

       

        <td>
          <a href="/parties/<%= a_party.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
